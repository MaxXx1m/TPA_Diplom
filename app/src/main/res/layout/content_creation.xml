                android:layout_height="wrap_content"
                android:id="@+id/d1" />

            <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/d2" />

            <Button
                android:text="Button"
                android:layout_width="match_parent"
